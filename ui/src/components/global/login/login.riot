
<login>

  <div class="row">
    <div if={ !state.login } class="hello column column-67">
      <h1><img width="35px" src="./storganizer-color-outline.png" /> Storganizer</h1>
      <p>Hello There</p>
    </div>

    <div class="login column column-33">
      <div class="row">
        <h1>Login</h1>
      </div>

      <div if={state.showUser} class="row">
        <user name={ state.name }/>
      </div>

      <div class="row username">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username">
      </div>

      <div class="row password">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password">
      </div>

      <div class="row">
        <button onclick={toggleUser}>login</button>
      </div>
    </div>

  </div>

  <script>
    import User from '../../includes/user/user.riot'
    import  './style.css'

    export default {
      components: {
        User
      },
      state: {
        name: 'Claudio',
        showUser: false
      },
      toggleUser() {
        this.update({
          showUser: !this.state.showUser
        })
      },
      login() {
        return false
      }
    }
  </script>

</login>

