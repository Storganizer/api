<location>
    <h2>Location</h2>

    <p>Name: <b>{ state.location.name }</b></p>
    <p>Description: <b>{ state.location.description }</b></p>
    <p>Rating: <b>{ state.location.classification }</b></p>


    <h2>Boxes</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Items</th>
        </tr>
      </thead>
      <tbody>

        <tr each={ box in state.location.boxes } key={ box.id }>
          <td>
            <a href="?box/{ box.id }">{ box.name }</a>
          </td>
          <td>{ box.lenItems }</td>
        </tr>

      </tbody>
    </table>

  <script>
    import  './style.css'

    export default {
      state: {
            location: false,
      },

      fetchLocation() {
        console.log(this)
        if (this.state.location == false) {

          let target = this
          function reqListener() {
            console.log(JSON.parse(this.responseText))
            target.update({
              location: JSON.parse(this.responseText)
            })
          }

          const req = new XMLHttpRequest();
          req.addEventListener("load", reqListener);
          req.open("GET", "http://localhost:5000/location/" + this.props.params[0]);
          req.send();

        }
      },

      onMounted() {
        this.fetchLocation()
      }
    }

  </script>

</location>