<locations>
    <locations-list locations={ state.locations }></locations-list>
  <script>
    import  './style.css'
    import LocationsList from '../../includes/location/list.riot'

    export default {
      components: {
        LocationsList,
      },
      state: {
        locations: [],
      },

      loadData() {
        let target = this
        if (window.dataStore) {
          window.dataStore.locations.getLocations(function(data){
            target.update({
              locations: data
            })
          })
        }
      },

      onMounted() {
        this.loadData()
      }
    }

  </script>



</locations>